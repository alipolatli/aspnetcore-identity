@model UserResetNewPasswordDto

@{
    ViewData["Title"] = "ResetPasswordConfirm";
}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-5">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header">
                    <h3 class="text-center font-weight-light my-4">Reset Password Confrim</h3>
                    <div class="alert-success m-3">
                        Enter your new password.
                    </div>
                </div>
                <div class="card-body ">
                    <form asp-controller="Auths" asp-action="ResetPasswordConfirm" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group m-2">
                            <label asp-for="Password" class="control-label"></label>
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group m-2">
                            <button type="submit" class="btn btn-dark w-100 btn-sm">Send</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
